{
  "name": "oraculo",
  "version": "0.1.0",
  "private": true,
  "workspaces": ["app"],
  "scripts": {
    "build": "anchor build",
    "deploy": "anchor deploy",
    "deploy:devnet": "anchor deploy --provider.cluster devnet",
    "test": "anchor test --skip-local-validator",
    "test:coverage": "anchor test --coverage",
    "seed": "ts-node scripts/seed-markets.ts",
    "initialize": "ts-node scripts/initialize-protocol.ts",
    "dev:frontend": "cd app && pnpm run dev",
    "build:frontend": "cd app && pnpm run build",
    "vercel-build": "cd app && pnpm install --frozen-lockfile && pnpm run build"
  },
  "devDependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@solana/web3.js": "^1.95.8",
    "@types/node": "^22.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  }
}
